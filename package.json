    "chai-as-promised": "~4.3.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.0.2",
    "standard": "^10.0.2",
    "standard-version": "^8.0.1"
  },
